class Solution:
    def longestPalindrome(self, s: str) -> int:
        # 统计字符词频


        s_cnt=collections.Counter(s)
        center=0
        res=0
        for num in s_cnt:
           if s_cnt[num]%2==1:
               center=1
               res+=s_cnt[num]-1
           else:
               res+=s_cnt[num]
        return res+center





