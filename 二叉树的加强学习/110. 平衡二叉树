# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None
class Solution:
    def isBalanced(self, root: TreeNode) -> bool:
        if not root:
            return True
        def heigh(root):
            if not root:
                return  0

            return max(heigh(root.left),heigh(root.right))+1
        return   self.isBalanced(root.left) and self.isBalanced(root.right) and abs(heigh(root.left)-heigh(root.right))<=1